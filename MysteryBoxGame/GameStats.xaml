<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MysteryBoxGame.GameStats">

    <!-- Game Stats -->

    <StackLayout>

        <Frame BackgroundColor="#696969" Padding="24" CornerRadius="0">
            <Label
                Text="Mystery Box Game"
                HorizontalTextAlignment="Center"
                TextColor="White"
                FontSize="36"
        />
        </Frame>

        <Label Text="Game Statistics" FontSize="Title" Padding="30,5,30,5"/>

        <Label Text="Starting Balance: $##" />

        <Label Text="Current Balance: $##" />

        <Label Text="Amount Won: $##" />

        <Label Text="Rounds Played: ##" />

        <Label Text="Use the 'Save' button to save this screen as a screenshot."
               FontAttributes="Italic" TextColor="Green" /> 

        <FlexLayout Direction="Row" AlignItems="Center" JustifyContent="Center">

            <Button BackgroundColor="AliceBlue" TextColor="Black" Text="Save" />
            <Button Background="red" TextColor="White" Text="Dismiss" />
            


        </FlexLayout>

    </StackLayout>

    
</ContentPage>
